<mvc:View
    controllerName="com.epic.cards.chronicler.controller.Chronicler"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <VBox class="sapUiSmallMargin">
        <Title text="Telepath (PubSub)" titleStyle="H3" class="sapUiSmallMarginBottom" />
        <Label text="Title:" design="Bold" />
        <Text text="{/title}" class="sapUiSmallMarginBottom" />
        <Label text="Status:" design="Bold" />
        <ObjectStatus 
            text="{/completedText}" 
            state="{/state}" />
        <Label text="User ID:" design="Bold" class="sapUiMediumMarginTop" />
        <Text text="{/userId}" />
    </VBox>
</mvc:View>