<mvc:View
    controllerName="miracleCard.controller.Miracle"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <VBox class="sapUiSmallMargin">
        <Title text="Детали задачи" titleStyle="H2" class="sapUiSmallMarginBottom" />
        <Label text="Название:" design="Bold" />
        <Text text="{/title}" class="sapUiSmallMarginBottom" />
        <Label text="Статус:" design="Bold" />
        <ObjectStatus 
            text="{/completedText}" 
            state="{/state}" />
        <Label text="ID пользователя:" design="Bold" class="sapUiMediumMarginTop" />
        <Text text="{/userId}" />
    </VBox>
</mvc:View>