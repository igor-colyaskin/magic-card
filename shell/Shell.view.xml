<mvc:View 
    controllerName="com.epic.shell.Shell" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:w="sap.ui.integration.widgets">
    <HBox renderType="Bare" justifyContent="Center" class="sapUiTinyMargin">
        <w:Card 
            id="archimageCard" 
            manifest="./cards/archimage/manifest.json" 
            width="400px"
            class="sapUiTinyMarginEnd"
            action="onArchimageAction" />
        <w:Card 
            id="telepathCard" 
            manifest="./cards/telepathPubSub/manifest.json" 
            class="sapUiTinyMarginEnd"
            visible="false"
            width="300px" />
        <w:Card 
            id="oracleCard" 
            manifest="./cards/oracleContext/manifest.json" 
            class="sapUiTinyMarginEnd"
            visible="false"
            width="300px" />
        <w:Card 
            id="oracleComponentCard" 
            manifest="./cards/oracleContextV2/manifest.json" 
            visible="false"
            class="sapUiTinyMarginEnd"
            width="300px" />
        <w:Card 
            id="chroniclerCard" 
            manifest="./cards/chronicler/manifest.json" 
            visible="false"
            class="sapUiTinyMarginEnd"
            width="300px" />
        <w:Card 
            id="alchemistCard" 
            manifest="./cards/alchemistAction/manifest.json" 
            class="sapUiTinyMarginEnd"
            visible="false"
            width="300px" />
        <w:Card 
            id="golemCard" 
            manifest="./cards/golemDirectAccess/manifest.json" 
            class="sapUiTinyMarginEnd"
            visible="true"
            width="300px" />
        <VBox id="stalkerCard">
            <layoutData>
                <FlexItemData growFactor="1" />
            </layoutData>
        </VBox>
    </HBox>
</mvc:View>